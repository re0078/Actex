<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popup_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/popup_playlist_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_playlist_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_700"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_playlist_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>