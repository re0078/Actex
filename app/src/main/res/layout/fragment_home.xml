<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RecyclerViewPager
                android:id="@+id/recycler_home_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:svp_timeMillis="3000"
                android:svp_colorActiveIndicator="@color/colorPrimary"
                android:svp_colorInactiveIndicator="@color/gray"
                android:svp_runAuto="true" />


            <RecyclerView
                android:id="@+id/recycler_home_categ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="My list"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <RecyclerView
                android:id="@+id/recycler_home_my_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Popular on Netflix"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <RecyclerView
                android:id="@+id/recycler_home_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>