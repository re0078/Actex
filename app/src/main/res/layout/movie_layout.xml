<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/activity_horizontal_margin"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/hor_movie_image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/movie_name"
        android:scaleType="fitXY"
        android:src="@drawable/movie_image_drawable" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hor_movie_name_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/movie_name"
            android:textAlignment="center"
            android:textColor="#7BC6C4"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/delete_item_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/playlist_cornered_background"
            android:src="@drawable/ic_baseline_delete_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>